@model User

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="d-flex align-items-center justify-content-center" style="height: 87vh">
    <form asp-action="Index" method="post">
        <h2 class="text-center">Register</h2>
        <div class="text-danger text-center">@ViewBag.Message</div>
        <div class="form-group row m-1">
            <label class="col-4" asp-for="Name">Name</label>
            <input class="col-8" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row m-1">
            <label class="col-4" asp-for="Username">Username </label>
            <input class="col-8" asp-for="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group row m-1">
            <label class="col-4" asp-for="Password"> Password</label>
            <input class="col-8" type="password" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group row m-1">
            <label class="col-4" asp-for="Role">Role</label>
            <select class="col-8" asp-for="Role">
                <option value="Admin"> Admin </option>
                <option value="User"> User</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Register" class="btn btn-success" />
        </div>
        <div class="text-center">
            <a asp-area="" asp-controller="Login" asp-action="Index">Back to Login</a>
        </div>
    </form>
</div>
